@model paciente.web.Models.Consulta

@{
    ViewData["Title"] = "Agendar";
}

<h1>Agendar</h1>

<h4>Agende a Sua Consulta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Agendar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anexo" class="control-label"></label>
                <input asp-for="Anexo" class="form-control" />
                <span asp-validation-for="Anexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DtHora" class="control-label"></label>
                <input asp-for="DtHora" class="form-control" />
                <span asp-validation-for="DtHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Inicio</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
